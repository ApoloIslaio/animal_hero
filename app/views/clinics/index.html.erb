<%= form_tag clinics_path, method: 'get' do%>
<div class="row">
    <div class="form-group col-sm-2">
      <%= label_tag  'Pesquisar clinica:' %>
      <%= select_tag :id, options_from_collection_for_select(Clinic.all.order(:description),"id","description"), include_blank: 'Selecione' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-sm-3">
      <%=button_tag(value: "commit",type:'submit',class: "btn btn-success") do %>
        Pesquisar
      <%end %>
    </div>
  </div>

<%end %>

<p id="notice"><%= notice %></p>

<%- model_class = Clinic -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <%= link_to 'Cadastrar nova clinica veterinaria', new_clinic_path,
                :class => 'btn btn-primary' %>
  </h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Email</th>
      <th>Estado</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clinics.each do |clinic| %>
      <tr>
        <td><%= clinic.description %></td>
        <td><%= clinic.email %></td>
        <td><%= clinic.state.description %></td>
        <td>
          <%= 
            if clinic.logo != '' 
              image_tag clinic.logo, size: "60x65"
            else 
              'Não informado.' 
            end 
          %>
        </td>


        <td>
        <%= link_to content_tag(:i,'Mostrar'),
                    clinic, 
                    :class => 'btn btn-success btn-xs' %>
        
        <%= link_to content_tag(:i,'Editar', class: ["fas", "fa-edit"]),
                     edit_clinic_path(clinic),
                    :class => 'btn btn-primary btn-xs' %>
        
        <%= link_to content_tag(:i,'Excluir', class: ["fas", "fa-trash"]),
                    clinic,
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza?')) },
                    :class => 'btn btn-xs btn-danger' %>
      </td>

      </tr>
    <% end %>
  </tbody>
</table>

